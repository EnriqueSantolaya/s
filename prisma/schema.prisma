generator client {
  provider = "prisma-client-js"
  output   = "../../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String      @id @default(uuid())
  username     String   @unique
  passwordHash String
  projects  Project[]
  createdAt    DateTime @default(now())
}

model Project {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  // Parameters
  latitud   Float
  meses     Int[]
  alturaFija Int?
  acimutFijo Int?

  // Results
  altura    Float?
  acimut    Float?
  energia   Float?

  createdAt DateTime @default(now())
}
